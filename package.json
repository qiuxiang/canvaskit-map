{
  "scripts": {
    "core-build": "vite build packages/core",
    "core-dev": "vite build packages/core -w",
    "react-build": "cd packages/react && esbuild build.ts --format=cjs | node && tsc",
    "react-dev": "cd packages/react && ((tsc -w) & esbuild build.ts --format=cjs | node - dev)",
    "example-build": "vite build packages/example",
    "example-dev": "vite packages/example --host",
    "publish": "pnpm publish -r --no-git-checks --access public --registry https://registry.npmjs.org"
  },
  "devDependencies": {
    "@types/node": "^20.8.4",
    "chokidar": "^3.5.3",
    "esbuild": "^0.19.4",
    "sucrase": "^3.34.0",
    "typescript": "^5.2.2",
    "vite": "^4.4.11",
    "vite-plugin-dts": "^3.6.0"
  }
}
